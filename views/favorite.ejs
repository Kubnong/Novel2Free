<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Favorite Novels</title>
  </head>
  <body class="text-white">
    <div
      class="flex flex-col bg-[url('/assets/bg.png')] min-h-screen bg-center bg-cover"
    >
      <!-- Navbar -->
      <nav
        class="flex items-center justify-between px-6 py-4 bg-gray-900 shadow-lg"
      >
        <h1
          class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-500 bg-clip-text text-transparent"
        >
          Favorite Novels
        </h1>
        <a
          href="/"
          class="px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg font-semibold hover:opacity-80"
        >
          Back Home
        </a>
      </nav>

      <!-- Main -->
      <main class="px-6 py-10 max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">My Favorites ❤️</h2>
        <div
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6"
        >
          <% favoriteItems.forEach(novel => { %>
          <a
            href="/detail_novel/<%= novel._id %>"
            class="w-[200px] h-[260px] rounded-xl overflow-hidden shadow-lg bg-white/10 backdrop-blur-md transition transform hover:scale-105 hover:-translate-y-1 hover:shadow-2xl hover:shadow-pink-500/20"
          >
            <!-- Card container -->
            <div class="relative w-full h-full">
              <!-- Cover image -->
              <img
                src="<%= novel.image_url %>"
                alt="Novel Cover"
                class="w-full h-full object-cover"
              />
              <!-- Overlay bottom -->
              <div
                class="absolute bottom-0 w-full bg-black/50 backdrop-blur-sm p-3"
              >
                <h3 class="text-base font-bold truncate"><%= novel.title %></h3>
                <div class="flex justify-between items-center">
                  <span class="text-pink-400 font-bold"
                    ><%= novel.price %>฿</span
                  >
                </div>
              </div>
            </div>
          </a>
          <% }) %>
        </div>
      </main>
    </div>
  </body>
</html>
